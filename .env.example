# .env.example
# Configuración SAP Business One
SAP_SERVICE_LAYER_URL=https://your-sap-server:50000/b1s/v1
SAP_USERNAME=manager
SAP_PASSWORD=your-password
SAP_DEFAULT_COMPANY=SBODEMOUS

# Configuración Base de Datos
DATABASE_URL=postgresql://postgres:password@postgres:5432/amortization_db
POSTGRES_DB=amortization_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Configuración Redis
REDIS_URL=redis://redis:6379/0

# Configuración JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuración API Gateway
API_GATEWAY_URL=http://localhost:8000/api
CORS_ORIGINS=["http://localhost:3000", "http://localhost"]

# Configuración OWL App
NODE_ENV=development
REACT_APP_API_URL=http://localhost:8000/api

# Configuración de Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Configuración de Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Configuración de Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30